<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<h5>Create Product</h5>
<%= form_with(model: [@category, @product ]) do |form| %>
<%= form.hidden_field :category_id, value: @category.id %>
<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control" %>

</div>
<div class="form-group">
  <%= form.label :price %>
  <%= form.number_field :price, class: "form-control" %>

</div>
<div class="form-group">
  <%= form.submit "Crear", class: "btn btn-primary btn-sm" %>

</div>

<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <th scope="row">
        <%= product.id %>
      </th>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= link_to 'Destroy', categoty_product_path(@category, product), method: :delete, data: { confirm: 'Seguir'}, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
